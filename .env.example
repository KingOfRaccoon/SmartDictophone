# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/smart_dictophone
DATABASE_DRIVER=org.postgresql.Driver
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_MAX_POOL_SIZE=10

# JWT Configuration (используется как fallback, основная аутентификация через Keycloak)
# IMPORTANT: Change this secret in production! Must be at least 256 bits (32+ characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits-long

# Keycloak Configuration
# Получите client secret с помощью: ./scripts/get-client-secret.sh
KEYCLOAK_SERVER_URL=http://localhost:8090
KEYCLOAK_REALM=smart-dictophone
KEYCLOAK_CLIENT_ID=smart-dictophone-backend
KEYCLOAK_CLIENT_SECRET=your-backend-client-secret-change-me
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# API Key for Transcription Service (Whisper ML)
API_KEY=your-api-key-for-whisper-ml-transcription-service

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=smart-dictophone-audio

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rmuser
RABBITMQ_PASSWORD=rmpassword
RABBITMQ_QUEUE=transcription_queue

# Server Port (optional, defaults to 8080)
PORT=8080
